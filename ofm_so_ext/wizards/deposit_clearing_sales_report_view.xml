<?xml version="1.0"?>
<openerp>
    <data>
        <record id="deposit_clearing_sales_report_jasper" model="ir.actions.report.xml">
            <field name="string">Deposit Clearing Sales Report</field>
            <field name="auto">True</field>
            <field name="model">deposit.clearing.sales.report.wizard</field>
            <field name="name">Deposit Clearing Sales Report</field>
            <field name="report_name">deposit.clearing.sales.report.jasper</field>
            <field name="rml">ofm_so_ext/report/deposit_clearing_sales_report.jrxml</field>
            <field name="report_rml">ofm_so_ext/report/deposit_clearing_sales_report.jrxml</field>
            <field name="menu">False</field>
            <field name="header">False</field>
            <field name="jasper_report">True</field>
            <field name="jasper_output">xls</field>
        </record>

        <act_window id="action_deposit_clearing_sales_report_wizard"
                    name="Deposit Clearing Sales"
                    res_model="deposit.clearing.sales.report.wizard"
                    view_mode="form"
                    target="new"/>

        <menuitem id="menu_deposit_clearing_sales_report_wizard"
                  parent="sales_team.menu_sale_report"
                  action="action_deposit_clearing_sales_report_wizard"
                  sequence="16"/>

        <record id="view_deposit_clearing_sales_report_wizard" model="ir.ui.view">
            <field name="name">deposit.clearing.sales.report.form</field>
            <field name="model">deposit.clearing.sales.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Deposit Clearing Sales Report">
                    <group>
                        <group>
                            <field name="start_date" required="1"/>
                            <field name="end_date" required="1"/>
                        </group>
                        <group>
                            <field name="company_id"
                                   options="{'no_quick_create': True, 'no_create_edit': True}"/>
                            <field name="branch_id"
                                   options="{'no_quick_create': True, 'no_create_edit': True}"
                                   domain="[('pos_company_id', '=',company_id)]"/>
                            <field name="user_id"
                                   options="{'no_quick_create': True, 'no_create_edit': True}"/>
                        </group>
                        <group>
                          <field name="jasper_output" widget="radio" required="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_print_report"
                                string="Print Report" type="object"
                                class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>
