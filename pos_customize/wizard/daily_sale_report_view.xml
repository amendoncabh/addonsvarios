<?xml version="1.0"?>
<openerp>
    <data>

        <record id="daily_sale_report_jasper" model="ir.actions.report.xml">
            <field name="string">daily sale report</field>
            <field name="auto">True</field>
            <field name="model">daily.sale.report.wizard</field>
            <field name="jasper_model_id" ref="base.model_res_users"/>
            <field name="name">daily sale report</field>
            <field name="report_name">daily.sale.report.jasper</field>
            <field name="rml">pos_customize/report/daily_sale_report.jrxml</field>
            <field name="report_rml">pos_customize/report/daily_sale_report.jrxml</field>
            <field name="menu">False</field>
            <field name="header">False</field>
            <field name="jasper_report">True</field>
            <field name="jasper_output">pdf</field>
        </record>

        <act_window id="action_daily_sale_report_wizard"
                    name="Daily Sale Report"
                    res_model="daily.sale.report.wizard"
                    view_mode="form"
                    target="new"/>

        <menuitem id="menu_daily_sale_report_wizard"
                  parent="menu_report_sales"
                  action="action_daily_sale_report_wizard"
                  sequence="0"/>

        <record id="view_daily_sale_report_wizard" model="ir.ui.view">

            <field name="name">daily.sale.report.form</field>
            <field name="model">daily.sale.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Approve Licensing Application">
                    <group>
                        <group>
                            <field name="start_date" required="1"/>
                        </group>
                        <group>
                            <field name="branch_id"
                                   options="{'no_quick_create': True, 'no_create_edit': True}"
                                   required="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_print_report"
                                string="Print Report" type="object"
                                class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</openerp>
