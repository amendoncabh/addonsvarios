<?xml version="1.0"?>
<openerp>
  <data>
      <record id="payment_type_report_jasper" model="ir.actions.report.xml">
          <field name="string">Payment Type Report</field>
          <field name="name">Payment Type Report</field>
          <field name="type">ir.actions.report.xml</field>
          <field name="model">payment.type.report.wizard</field>
          <field name="report_name">payment.type.report.jasper</field>
          <field name="tml_source">file</field>
          <field name="report_rml">pos_customize/report/payment_type_report.jrxml</field>
          <field name="parser_state">loc</field>
          <field name="auto">True</field>
          <field name="menu">True</field>
          <field name="header">False</field>
          <field name="jasper_report">True</field>
          <field name="jasper_output">pdf</field>
          <field name="jasper_model_id" ref="pos_customize.model_payment_type_report_wizard"/>
      </record>

      <act_window id="action_payment_type_report_wizard"
        name="Payment Type Report"
        res_model="payment.type.report.wizard"
        view_mode="form"
        target="new"/>

      <menuitem id="menu_payment_type_report_wizard"
          parent="menu_report_payment"
          action="action_payment_type_report_wizard"
          sequence="0"/>

      <record id="view_payment_type_report_wizard" model="ir.ui.view">

            <field name="name">payment.type.report.form</field>
            <field name="model">payment.type.report.wizard</field>
            <field name="arch" type="xml">
             <form string="Payment Type Report">
               <group>
                    <group>
                        <field name="start_date" required="1"/>
                        <field name="end_date" required="1"/>
                     </group>
                    <group>
                          <field name="start_branch"
                                 options="{'no_quick_create': True, 'no_create_edit': True}"
                                 required="1"/>
                          <field name="end_branch"
                                 options="{'no_quick_create': True, 'no_create_edit': True}"
                                 required="1"/>
                    </group>
                   <group>
                          <field name="jasper_output" widget="radio" required="1"/>
                   </group>
                </group>
                <footer>
                    <button name="action_print_report"
                        string="Print Report" type="object"
                        class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link"
                        special="cancel"/>
                </footer>
            </form>
            </field>
        </record>

    </data>
</openerp>
