<?xml version="1.0"?>
<openerp>
    <data>

        <record id="sales_tax_return_report_jasper" model="ir.actions.report.xml">
            <field name="string">รายงานภาษีขาย (ลดหนี้)</field>
            <field name="auto">True</field>
            <field name="model">sales.tax.return.report.wizard</field>
            <field name="jasper_model_id" ref="base.model_res_users"/>
            <field name="name">รายงานภาษีขาย (ลดหนี้)</field>
            <field name="report_name">sales.tax.return.report.jasper</field>
            <field name="rml">ofm_point_of_sale_ext/reports/sales_tax_return_report.jrxml</field>
            <field name="report_rml">ofm_point_of_sale_ext/reports/sales_tax_return_report.jrxml</field>
            <field name="menu">False</field>
            <field name="header">False</field>
            <field name="jasper_report">True</field>
            <field name="jasper_output">pdf</field>
        </record>

        <act_window id="action_sales_tax_return_report_wizard"
                    name="รายงานภาษีขาย (ลดหนี้)"
                    res_model="sales.tax.return.report.wizard"
                    view_mode="form"
                    target="new"/>

        <menuitem id="menu_sales_tax_return_report_wizard"
                  parent="pos_customize.menu_report_sales"
                  action="action_sales_tax_return_report_wizard"
                  sequence="5"/>

        <record id="view_sales_tax_return_report_wizard" model="ir.ui.view">

            <field name="name">sales.tax.return.report.form</field>
            <field name="model">sales.tax.return.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Approve Licensing Application">
                    <group>
                        <group>
                            <field name="start_date" required="1"/>
                            <field name="end_date" required="1"/>
                        </group>
                        <group>
                            <field name="company_id"
                                   options="{'no_quick_create': True, 'no_create_edit': True}"/>
                            <field name="branch_id"
                                   options="{'no_quick_create': True, 'no_create_edit': True}"
                                   domain="[('pos_company_id', '=',company_id)]" />
                        </group>
                        <group>
                          <field name="jasper_output" widget="radio" required="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_print_report"
                                string="Print Report" type="object"
                                class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</openerp>
